# ===============================================
# CoWorkSpace Backend Environment Variables
# ===============================================

# Application
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=coworkspace
DB_USER=coworkspace_user
DB_PASSWORD=coworkspace_password
DB_POOL_MIN=2
DB_POOL_MAX=20

# Redis (Opzionale)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars-very-secure
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Modalità Mock per sviluppo)
EMAIL_FROM=noreply@coworkspace.com
# Per email reali in produzione aggiungi:
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Stripe Payment (Per fase 3)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-min-32-chars

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true

# ===============================================
# SETUP COMPLETATO:
# ===============================================
# ✅ Database PostgreSQL funzionante
# ✅ API di autenticazione complete
# ✅ Email service in modalità mock
# ✅ JWT authentication
# ✅ Validazioni password robuste
# ✅ Logging completo
# ===============================================