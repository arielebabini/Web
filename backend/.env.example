# ===============================================
# FILE UPLOAD CONFIGURATION
# ===============================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf
UPLOAD_DIR=uploads

# ===============================================
# LOGGING CONFIGURATION
# ===============================================
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# ===============================================
# SECURITY CONFIGURATION
# ===============================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-min-32-chars
COOKIE_SECRET=your-cookie-secret-key-min-32-chars

# Security headers
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# ===============================================
# FEATURE FLAGS
# ===============================================
ENABLE_SWAGGER=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_CORS=true
ENABLE_HELMET=true

# Development features
ENABLE_DEBUG_ROUTES=false
ENABLE_TEST_ENDPOINTS=false

# ===============================================
# MONITORING & ANALYTICS
# ===============================================
# APM Service (es. New Relic, DataDog)
APM_SERVICE_NAME=coworkspace-api
APM_LICENSE_KEY=

# Google Analytics
GA_TRACKING_ID=

# Sentry for error tracking
SENTRY_DSN=

# ===============================================
# CLOUD STORAGE (OPZIONALE)
# ===============================================
# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-1
AWS_S3_BUCKET=

# Google Cloud Storage
GCS_PROJECT_ID=
GCS_BUCKET_NAME=
GCS_KEY_FILE=path/to/service-account.json

# ===============================================
# NOTIFICATION SERVICES
# ===============================================
# Push notifications
FIREBASE_SERVER_KEY=
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ===============================================
# EXTERNAL APIS
# ===============================================
# Maps API for location services
GOOGLE_MAPS_API_KEY=
MAPBOX_ACCESS_TOKEN=

# Weather API
OPENWEATHER_API_KEY=

# ===============================================
# DEVELOPMENT UTILITIES
# ===============================================
# Test user credentials
TEST_USER_EMAIL=test@coworkspace.local
TEST_USER_PASSWORD=Test123456

# Seed data
ENABLE_SEED_DATA=true
SEED_ADMIN_EMAIL=admin@coworkspace.local
SEED_ADMIN_PASSWORD=Admin123456

# Mock services
ENABLE_MOCK_PAYMENTS=true
ENABLE_MOCK_EMAILS=true
ENABLE_MOCK_SMS=true

# ===============================================
# PRODUCTION OVERRIDES
# ===============================================
# In produzione, sovrascrivi queste variabili:
# NODE_ENV=production
# JWT_SECRET=very-secure-production-secret-min-64-chars
# DB_PASSWORD=secure-production-password
# REDIS_PASSWORD=secure-redis-password
# CORS_ORIGIN=https://yourdomain.com
# FRONTEND_URL=https://yourdomain.com
# LOG_LEVEL=info

