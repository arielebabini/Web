# ===============================================
# CoWorkSpace Environment Variables
# ===============================================

# ===============================================
# APPLICATION SETTINGS
# ===============================================
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# ===============================================
# DATABASE POSTGRESQL
# ===============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=coworkspace
DB_USER=coworkspace_user
DB_PASSWORD=coworkspace_password
DB_POOL_MIN=2
DB_POOL_MAX=20

# ===============================================
# REDIS CACHE (OPZIONALE)
# ===============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===============================================
# JWT AUTHENTICATION
# ===============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars-very-secure
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===============================================
# FRONTEND CONFIGURATION
# ===============================================
FRONTEND_URL=http://localhost:3001
FRONTEND_PORT=3001

# ===============================================
# CORS CONFIGURATION
# ===============================================
# Multiple origins separated by comma
CORS_ORIGIN=http://localhost:3001,http://frontend:3001,http://127.0.0.1:3001

# ===============================================
# RATE LIMITING
# ===============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===============================================
# EMAIL CONFIGURATION
# ===============================================
# Modalità Mock per sviluppo
EMAIL_FROM=noreply@coworkspace.com

# Per email reali in produzione aggiungi:
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# Alternative email providers:
# EMAIL_SERVICE=sendgrid
# EMAIL_SERVICE=mailgun
# EMAIL_SERVICE=ses (AWS SES)

