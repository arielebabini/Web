{
  "name": "coworkspace-backend",
  "version": "1.0.0",
  "description": "API REST per la gestione di spazi di coworking",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node app.js",
    "dev": "cross-env NODE_ENV=development nodemon app.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:unit": "cross-env NODE_ENV=test jest --selectProjects unit",
    "test:integration": "cross-env NODE_ENV=test jest --selectProjects integration --runInBand",
    "test:integration:watch": "cross-env NODE_ENV=test jest --selectProjects integration --watch",
    "test:integration:coverage": "cross-env NODE_ENV=test jest --selectProjects integration --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:e2e:watch": "jest --config jest.e2e.config.js --watch",
    "test:e2e:coverage": "jest --config jest.e2e.config.js --coverage",
    "test:spaces": "cross-env NODE_ENV=test jest --selectProjects integration --testPathPattern=spaces-api.test.js",
    "test:bookings": "cross-env NODE_ENV=test jest --selectProjects integration --testPathPattern=bookings-api.test.js",
    "test:auth": "cross-env NODE_ENV=test jest --selectProjects integration --testPathPattern=auth-api.test.js",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:db:setup": "bash scripts/setup-test-db.sh",
    "test:db:teardown": "bash scripts/teardown-test-db.sh",
    "test:db:reset": "npm run test:db:teardown && npm run test:db:setup",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "db:migrate": "cross-env NODE_ENV=development node scripts/migrate.js",
    "db:seed": "cross-env NODE_ENV=development node scripts/seed.js",
    "docs": "swagger-jsdoc -d src/config/swagger.js src/routes/*.js -o swagger.json"
  },
  "keywords": [
    "coworking",
    "api",
    "nodejs",
    "express",
    "postgresql",
    "jwt",
    "stripe"
  ],
  "author": "CoWorkSpace Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "google-auth-library": "^10.3.0",
    "helmet": "^7.1.0",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "redis": "^4.6.12",
    "sequelize": "^6.37.7",
    "stripe": "^14.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "cross-env": "^10.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 4
  }
}